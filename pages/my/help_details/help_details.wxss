page{
  background: #f1f1f1;
}
.rGoods-box .title-h2{
  padding: 22rpx;
  font-size:30rpx;
  font-weight: 600;
  color: #f32e6e;
}
.rGoods-box .cont{
  border: 1px solid #e6e6e6;
  border-radius: 8px;
  margin-bottom: 20rpx;
}
.rGoods-box .title-h3{
  height: 68rpx;
  line-height: 68rpx;
  padding: 0 14rpx;
  border-bottom: 1px solid #e6e6e6;
  background: #fff;
  border-top-left-radius: 8px;
  border-top-right-radius: 8px;
}
.rGoods-box .title-h3 image,
.rGoods-box .title-h3 text{
  display: inline-block;
  vertical-align: middle;
}
.rGoods-box .title-h3 image{
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
}
.rGoods-box .title-h3 text,
.rGoods-box .cont-text{
  font-size: 24rpx;
  color: #8d8d8d;
}
.rGoods-box .cont-text{
  padding: 16rpx 22rpx;
}






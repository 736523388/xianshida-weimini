/* 选项卡以下 */
page{
  width: 100%;
  height:100%;
  background: #f1f1f1;
}

.tab {
  height:93rpx;
  width: 750rpx;
  box-sizing: border-box;
  overflow: hidden;
  background: #fff;
  color: #121314;
  font-size: 30rpx;
  white-space: nowrap;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top:0;
}

.tabitem {
  height: 90%;
  display: inline-block;
  text-align: center;
  line-height: 93rpx;
  font-size: 30rpx;
  margin-top: 5rpx;
  margin-left:55rpx;
}

.active {
  color: #f32c6e;
  border-bottom: 4px solid #f32c6e;
}

/* 内容 */

.mall_content {
  width: 100%;
  height:100%;
}

.con_t text {
  font-size: 30rpx;
  color: #fff;
  margin-left: 40rpx;
}

.con_c {
  width: 100%;
  height: auto;
  margin-bottom: 10rpx;
}

.con_con {
  width: 100%;
  height: auto;
  margin: 0 auto;
  background: #fff;
  margin-bottom: 10rpx;
}

.con-top {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:32rpx 0 14rpx 0; 
}

.con-top>text {
  color: #f32c6e;
  font-size: 24rpx;
  margin: 0 20rpx;
}

.con-top .supplier_name {
  color: #121314;
}

.con_bottom {
  width: 100%;
  height: auto;
}

.con_bottom>view:nth-of-type(1) {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  border-bottom: 1px solid #efefef;
}

.con_bottom>view:nth-of-type(1) text {
  color: #f32c6e;
  font-size: 26rpx;
  margin-right: 20rpx;
}

.con_bottom>view:nth-of-type(2) {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.con_bottom>view:nth-of-type(2) text {
  width: 120rpx;
  height: 40rpx;
  border: 1px solid #e5e5e5;
  font-size: 22rpx;
  color: #8d8d8d;
  border-radius:10rpx;
  line-height: 40rpx;
  text-align: center;
  margin-right:5rpx;
}

.con_item {
  width: 100%;
  height:100%;
  box-sizing: border-box;
  padding:23rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.con_item>view>image {
  width:175rpx;
  height:175rpx;
  border-radius: 10rpx;
  border:1rpx solid #f1f1f1;
  box-shadow: 2rpx 2rpx 2rpx #f1f1f1;
}
.con_nav {
  width: 70%;
  height:175rpx;
  display: flex;
  flex-direction: column;
  justify-content:space-between;
}
.con_pn{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.con_nav .con_right {
  width: 100%;
  height:90%;
  overflow: auto;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.word1 {
  margin: 0 0 10rpx 20rpx;
  font-size: 30rpx;
  font-weight: 600;
}

.word2 {
  margin: 0 0 10rpx 20rpx;
  font-size: 25rpx;
  font-weight: 500;
  color: #666;
}

.price {
  font-size: 26rpx;
  color: #f32c6e;
}


.number {
  font-size: 24rpx;
  color: #121314;
}

.con_right text:nth-of-type(1) {
  color: #121314;
  font-size:28rpx;
}

.con_right text:nth-of-type(2) {
  color: #8d8d8d;
  font-size: 22rpx;
}
.con_right text:nth-of-type(3) {
  color: #bdbdbd;
  font-size: 20rpx;
}
.conitem {
  width: 750rpx;
}

.active1 {
  display: block;
}

.cart-no-data {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-top: 150rpx;
}

.cart-no-data>image {
  width: 210rpx;
  height: 148rpx;
  margin-bottom: 40rpx;
}

.cart-no-data>view {
  font-size: 30rpx;
  color: #8d8d8d;
}
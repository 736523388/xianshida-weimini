/* 顶部信息栏 */
page{
  background: #f1f1f1;
}
.top {
  width:100%;
  height: 172rpx;
  background: #fff;
  margin-bottom:10rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  box-sizing: border-box;
  padding: 0 20rpx;
}
.t_img{
  width:123rpx;
  height:123rpx;
  border-radius:10rpx;
  overflow: hidden;
  text-align: center;
  border:0.5rpx solid #eee;
}
.top_message {
  width:70%;
  display: flex;
  flex-direction: column;
}
.top_message>view{
  padding: 10rpx;
}
.top_message>view:nth-of-type(2){
  display: flex;
  justify-content: space-between;
}
.top_message>view text{
 font-weight: 600;
 color: #333333;
}
.top_message>view:nth-of-type(2) text:nth-of-type(2){
 padding: 2rpx 10rpx;
 border:0.5rpx solid #8d8d8d;
 font-size: 23rpx;
 color: #8d8d8d;
}

/* 下部分 */

.content {
  width: 100%;
  height: auto;
  margin: 0 auto;
  background: #fff;
}

.order {
  width: 690rpx;
  height: auto;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-end;
}

.order_top {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.order>view>view:nth-of-type(1) {
  width: 17%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.order>view>view:nth-of-type(1) text {
  font-size: 20rpx;
  color: #999;
}

.state{
  width:20rpx;
  height:20rpx;
  border-radius: 50%;
  background:#ccc;
}
.color{
  width:25rpx;
  height:25rpx;
  background:  #9f1346;
}
.details {
  width: 81.5%;
  height: 100rpx;
  box-sizing: border-box;
  padding-left: 30rpx;
}

.details_text {
  font-size: 23rpx;
  color: #333;
}
.details_text_f{
  font-weight: 600;
}

.in {
  border-left: 1px dashed  #9f1346;
}

.no_in {
  border-left: 1px solid #ccc;
}
.store{
  width: 700rpx;
  height:auto;
  margin:20rpx auto;
  background: #fff;
  border-radius: 20rpx;
}
.store>view{
  font-size: 30rpx;
  color: #333;
  line-height: 55rpx;
  margin-left: 20rpx;
}
/* pages/index/shop/shop.wxss */
/* banner */
page{
  background: #496195;
}
.shop-top{
  width: 100%;
  height: 500rpx;
  position: relative;
}
.shop-top image{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.top-text{
  position: relativel;
  z-index: 2;
  padding-top: 190rpx;
  text-align: center;
}
.top-title{
  font-size: 60rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 22rpx;
}
.top-font{
  padding: 2rpx 12rpx 6rpx 12rpx;
  border-radius: 22px;
  font-size: 40rpx;
  font-weight: 500;
  color: #000;
  background: rgba(255, 255, 255, 0.4);
  display: inline-block;
}
/* 主体 */
.shop-main{
  width: 100vw;
  height: auto;
  position: relative;
}
.shop-main>image{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
/* title */
.shop-cont{
  position: relative;
}
.cont-text{
  padding: 32rpx 0;
  color: #fff;
}
.cont-font{
  font-size: 28rpx;
  margin-bottom: 40rpx;
}
.cont-title{
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
}
.cont-title image,
.cont-title text{
  display: inline-block;
  vertical-align: middle;
}
.cont-title image{
  width: 43rpx;
  height: 16rpx;
}
.cont-title text{
  margin: 0 6px;
}
/* 产品 */
.shop-product .product-box{
  float: left;
  width: 32%;
  background: #fff;
  border-radius: 6px;
  margin-right: 2%;
  margin-bottom: 18rpx;
}
.shop-product .product-box:nth-of-type(3n){
  margin-right: 0;
}
.product-box>image{
  width: 100%;
  height: auto;
  border-top-left-radius: 6px;
  border-top-right-radius: 6px;
}
.product-text{
  padding: 10rpx 6rpx;
}
.product-title{
  font-size: 24rpx;
  color: #000;
  margin-bottom: 16rpx;
}
.product-price .afleft{
  /* font-size: 28rpx; */
  font-size: 26rpx;
  color: #f32e6e;
}
.product-price .afright{
  position: relative;
}
.product-price .afright .price-num{
  /* font-size: 24rpx; */
  font-size: 20rpx;
  color: #ababab;
  display: inline-block;
  vertical-align: middle;
}
.price-icon{
  display: inline-block;
  /* padding: 0 4rpx; */
  /* height: 24rpx;
  line-height: 22rpx; */
  padding: 0 2rpx;
  height: 24rpx;
  line-height: 22rpx;
  text-align: center;
  /* font-size: 18rpx; */
  font-size: 18rpx;
  color: #fff;
  border-radius: 2px;
  background: #f32e6e;
  vertical-align: top;
}
.product-btn{
  width: 100%;
  height: 35rpx;
  line-height: 35rpx;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
  border-radius: 4px;
  background: #f32e6e;
  margin-top: 16rpx;
}



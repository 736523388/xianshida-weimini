/**index.wxss**/
@import '../../../style/stylesheet.wxss';
@import '../../../templates/goods_card.wxss';

.index-box {
  width: 100vw;
  height: auto;
  overflow: hidden;
  background: linear-gradient(#fb670f 0%, #f0f0f0 50%);
  background: -webkit-linear-gradient(#fb670f 0%, #f0f0f0 1000rpx);
}

.search-container {
  padding: 20rpx 20rpx 0 20rpx;
}

.search-container>view {
  position: relative;
  padding-left: 56rpx;
  padding-right: 64rpx;
  height: 100%;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
  background: #fff;
  border-radius: 40rpx;
}

.search-icon {
  position: absolute;
  top: 60%;
  left: 20rpx;
  margin-top: -20rpx;
}

.search-container input {
  padding: 8rpx 0;
  font-size: 24rpx;
}

.head-container {
  margin: 130rpx 20rpx 0 20rpx;
  box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.2);
}

.head-container .site-logo {
  width: 150rpx;
  height: 150rpx;
  position: absolute;
  left: 40rpx;
  top: 60rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.head-container .site-logo>image {
  height: 100%;
  width: 100%;
}

.head-container .site-content {
  background-color: #fff;
  border-radius: 16rpx;
}

.goods-tag-box {
  padding: 20rpx 20rpx 0 20rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.goods-tag {
  background-color: #fff;
  color: #fb670f;
  padding: 4rpx 16rpx;
  box-sizing: border-box;
  border-radius: 12rpx;
}

.container_f {
  padding: 20rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.container_t {
  padding: 20rpx 20rpx 0 20rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.goods-card-box-title {
  display: flex;
  justify-content: space-between;
  border-bottom: 2px solid #fb670f;
}

.goods-card-box-title-left {
  background-color: #fb670f;
  color: #fff;
  align-items: center;
  height: 56rpx;
  line-height: 56rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  border-radius: 8rpx 8rpx 0 0;
}

.goods-card-box-title-right {
  background-color: #fb670f;
  color: #fff;
  height: 48rpx;
  padding: 4rpx 10rpx;
  display: flex;
  justify-content: end;
  align-items: center;
  border-radius: 8rpx 8rpx 8rpx 8rpx;
  box-sizing: border-box;
}

.goods-card-box {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  /* flex-flow:column wrap;
  height: 100vh;
  width: 100vw;
  overflow: hidden; */
}


/* banner */

swiper {
  height: 243rpx;
}

swiper-item {
  border-radius: 16rpx;
}

.slide-image {
  width: 100vw;
  height: 243rpx;

}

/* 菜单栏 */

.menu_container {
  display: flex;
  flex-wrap: wrap;
  margin: 10px;
  box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.2);
  box-sizing: border-box;
  border-radius: 2%;
  background-color: #fff;
}

.menu_item {
  width: 20%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  font-weight: 500;
  color: #333;
  box-sizing: border-box;
  padding: 10rpx 0;
}

.menu_icon {
  width: 110rpx;
  height: 110rpx;
  border-radius: 10rpx;
}

.menu_item .menu_name {
  width: 100%;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.container_coupon {
  margin: 20rpx;
  box-shadow: 0 4rpx 10rpx 0 rgba(0, 0, 0, 0.2);
  border-radius: 24rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-size: 14px;
  padding: 8rpx 0;
  box-sizing: border-box;
}
.container_coupon view{
  display: flex;
  box-sizing: border-box;
  font-weight: 500;
  padding: 0 20rpx;
}

.container_coupon image {
  width: 40rpx;height: 40rpx;margin-right: 20rpx;
}

.coupon_column {
  /* flex: 1; */

/* pages/index/bargainMy/bargainMy.wxss */
/* list */
page{
  padding-bottom: 80rpx;
}
.list-cont{
  padding: 38rpx 64rpx 28rpx 64rpx;
  border-bottom: 1px solid #f1f1f1;
}
.list-cont .afleft{
  width: 177rpx;
  height: 174rpx;
  border-radius: 6px;
  box-shadow: 0 0 6px #d5d5d5;
  position: relative;
}
.list-cont .afleft image{
  width: 100%;
  height: 100%;
}
.list-cont .afright{
  width: 430rpx;
}
.left-active{
  position: absolute;
  top: 28rpx;
  left: 30rpx;
  z-index: 10;
  width: 125rpx;
  height: 125rpx;
  line-height: 125rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  border-radius: 50%;
  background: rgba(0,0,0, 0.6);
}
.list-text1{
  font-size: 28rpx;
  color: #121314;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.list-text2{
  width: 334rpx;
  font-size: 22rpx;
  color: #949494;
  padding-left: 6rpx;
}
.list-text3{
  font-size: 22rpx;
  color: #bdbdbd;
  padding-left: 6rpx;
}
.list-text4{
  margin-top: 10rpx;
  display: flex;
  flex-flow: row nowrap;
  align-items:center;
  justify-content: space-between;
}
.now-list .list-text4{
  margin-top: 30rpx;
}
.success-list .list-text4,
.fail-list .list-text4{
  margin-top: 80rpx;
}
.list-text4 view{
  font-size: 26rpx;
  color: #f32c6e;
}
.list-text4 text{
  font-size: 22rpx;
  color: #8d8d8d;
}
.list-text4 .right{
  width: 145rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  color: #fff;
  font-size: 24rpx;
  background: #f32c6e;
  border-radius: 10rpx;
}
.list-text4 .right image{
  width: 100%;
  height: 100%;
}
.product-text4{
  color: #000;
}
.product-text4>view{
  display: inline-block;
  vertical-align: middle;
  width: 34rpx;
  height: 32rpx;
  line-height: 32rpx;
  font-size: 22rpx;
  color: #fff;
  text-align: center;
  border-radius: 2px;
  background: #000;
}
.product-text4>text{
  font-size: 22rpx;
  color: #949494;
  margin-left: 4rpx;
}
/* 底部 */
.bargainBottom{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100vw;
  border-top: 1px solid #f1f1f1;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  z-index: 100;
  background: #f1f1f1;
}
.bargainBottom>navigator{
  flex-grow: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #000;
}
.bargainBottom>navigator.active{
  color: #f32c6e;
}
.bargainBottom>navigator.active .bargainBottom-active,
.bargainBottom>navigator .bargainBottom-icon{
  display: inline-block;
}
.bargainBottom>navigator.active .bargainBottom-icon,
.bargainBottom>navigator .bargainBottom-active{
  display: none;
}
.bargainBottom>navigator:first-child{
  position: relative;
}
.bargainBottom>navigator:first-child::before{
  position: absolute;
  content: '';
  width: 2rpx;
  height: 100%;
  background: #e4e1e1;
  right: 0;
  top: 0;
}
.bargainBottom image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 4rpx;
}
.bargainBottom image,
.bargainBottom text{
  display: inline-block;
  vertical-align: middle;
}






/* pages/index/assemble/assemble.wxss */
.top-cont{
  width: 100vw;
  height: 300rpx;
  position: relative;
}
.top-text{
  position: absolute;
  top: 24rpx;
  left: 20rpx;
  width: 300rpx;
  height: 36rpx;
  font-size: 16rpx;
  color: #fff;
  border-radius: 42rpx;
  background: rgba(0,0,0, 0.5);
}
.top-img{
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}
.top-font{
  width: 250rpx;
  line-height: 36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
/* nav */
.assemble-nav{
  width: 100vw;
  height: 110rpx; 
  overflow: hidden;
  white-space: nowrap;
}
.assemble-nav view{
  width: 198rpx;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  color: #fff;
  font-size: 36rpx;
  background: #343434;
}
.assemble-nav view.active{
  position: relative;
  background: #f32e6e;
}
.assemble-nav view.active::before{
  position: absolute;
  content: " ";
  border: 5px solid transparent;
  border-top: 5px solid #f32e6e;
  top: 100%;
  left: 80rpx;
}
/* 产品列表 */
.list-cont{
  padding: 36rpx 50rpx;
  border-bottom: 2px solid #f1f1f1;
}
.list-img{
  width: 177rpx;
  height: 177rpx;
  border-radius: 6px;
  box-shadow: 0 0 4px rgb(179, 178, 178);
  margin-right: 22rpx;
}
.list-title{
  font-size: 26rpx;
  color: #121314;
  padding-top: 10rpx;
}
.list-title,
.list-text1{
  width: 352rpx;
  /* overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis; */
}
.list-text1{
  font-size: 24rpx;
  color: #949494;
}
.list-text2{
  font-size: 22rpx;
  color: #bdbdbd;
  margin-bottom: 4rpx;
}
.list-num{
  width: 446rpx;
}
.list-people{
  width: 46rpx;
  height: 18rpx;
  line-height: 18rpx;
  text-align: center;
  font-size: 14rpx;
  color: #fff;
  background: #f32e6e;
  border-radius: 2px;
  margin-bottom: 12rpx;
}
.list-price1{
  font-size: 26rpx;
  color: #f32e6e;
  margin-right: 22rpx;
}
.list-price2{
  font-size: 22rpx;
  color: #8d8d8d;
}
.list-btn{
  width: 110rpx;
  height: 36rpx;
  line-height: 34rpx;
  text-align: center;
  font-size: 20rpx;
  color: #fff;
  background: #f32e6e;
  border-radius: 4px;
  margin-top: 14rpx;
}



.top-img,
.top-font,
.list-img,
.list-text,
.list-num view{
  display: inline-block;
  vertical-align: middle;
}
.assemble-nav view{
  display: inline-block;
  vertical-align: top;
}
.top-cont>image,
.top-img>image,
.list-img>image{
  width: 100%;
  height: 100%;
}







.shop_list_box{
  width: 100%;
  box-sizing: border-box;
  padding:0 20rpx;
}
.item{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-content: center;
}
.item_title{
  font-size: 32rpx;
  color: #121314;
  line-height: 60rpx;
  text-align: center;
}
.item_box1{
  width:90%;
  box-sizing: border-box;
  border-radius: 20rpx;
  border:5rpx solid #1296db;
  margin: 0 5%;
  margin-bottom: 20rpx;
}

.item_box2{
  width:95%;
  box-sizing: border-box;
  border-radius: 20rpx;
  border:1rpx dashed #1296db;
  margin:2.5%;
  overflow: hidden;
  padding: 20rpx;
  font-size: 28rpx;
}
.item_img{
  width: 550rpx;
}
.item_address{
  margin: 10rpx 0; 
}
.item_box2>view{
  display: flex;
  align-items: center;
}
.item_box2>view>image{
  width:30px;
  margin-right: 10rpx;
}
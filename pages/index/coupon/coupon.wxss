/* pages/index/coupon/coupon.wxss */
page{
  background: #f1f1f1;
}
.coupon-title{
  height: 92rpx;
  line-height: 92rpx;
  background: #fff;
}
.coupon-title .wrap{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
}
.coupon-title .left image{
  width: 36rpx;
  height: 26rpx;
  margin-right: 10rpx;
}
.coupon-title .left text{
  font-size: 26rpx;
  color: #121314;
}
.coupon-title .right image{
  width: 10rpx;
  height: 20rpx;
  margin-left: 10rpx;
}
.coupon-title .right text{
  font-size: 24rpx;
  color: #8d8d8d;
}
/* 主体 */
.coupon-mian{
  margin: 20rpx;
}
.coupon-cont{
  margin-bottom: 20rpx;
  border-radius: 6px;
  background: #fff;
  padding-right: 20rpx;
  box-sizing: border-box;
}
.cont-border{
  width: 100%;
  height: 20rpx;
  background: #f32e6e;
  border-top-left-radius: 6px;
  border-top-right-radius: 6px;
}
.cont-text{
  /* width: 606rpx; */
  /* border-bottom: 1px dashed #f32e6e; */
  /* margin: 0 auto; */
}
.cont-text .cont-wrap{
   padding: 32rpx 20rpx 26rpx 20rpx;
}
.text-money{
  background-color: #DB2777;
  color: #fff;
  height: 180rpx;
  width: 220rpx;
  border-radius: 20rpx 0 0 20rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding: 10rpx;
  box-sizing: border-box;
}
.text-money::after {
  content: '';
  height: 100%;
  position: absolute;
  border-left: 12rpx dotted white;
  top: 0;
  right: -6rpx;
}
.money1{
  font-size: 56rpx;
  line-height: 56rpx;
  font-weight: 500;
  text-align: center;
  /* padding: 20rpx 0; */
}
.money1>text {
  margin: 0;
}
.money2{
  font-size: 22rpx;
  text-align: center;
  font-weight: lighter;
}
.money3{
  width: 100rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
  border-radius: 4px;
  background: #f32e6e;
  margin-top: 10rpx;
}
.cont-name{
  /* width: 256rpx; */
   /* color: #f32e6e; */
  /* margin-right: 6rpx; */
  /* flex-grow: 1; */
  padding-left: 20rpx;
  box-sizing: border-box;
  flex: 1;
  color: #6B7280;
}
.name1{
  font-size: 28rpx;
  color: #000;
  font-weight: 500;
  letter-spacing: 2rpx;
}
.name2{
  font-size: 22rpx;
  font-weight: lighter;
}
.name3{
  font-size: 24rpx;
}
.cont-btn{
  font-size: 24rpx;
  white-space: normal;
  color: #fff;
  /* width: 116rpx;
  height: 33rpx;
  line-height: 33rpx;
  text-align: center;
  border-radius: 15%; */
  background: #DB2777;
  border-radius: 30rpx;
  padding: 8rpx 36rpx;
}
.cont-day{
  height: 62rpx;
  line-height: 62rpx;
  padding: 0 20rpx;
  font-size: 22rpx;
  color: #f32e6e;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
}
/* 使用说明 */
.coupon-explain{
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0,0,0, 0.6)
}
.explain-main{
  width: 664rpx;
  border-radius: 6px;
  background: #fff;
  padding-top: 30rpx;
  margin: 224rpx auto 0 auto; 
  position: relative;
}
.explain-padding{
  height: 676rpx;
  padding: 0 30rpx 30rpx 30rpx;
  overflow: auto;
}
.explain-title{
  /* padding: 30rpx 0 11rpx 0; */
  font-size: 36rpx;
  color: #393939;
  text-align: center;
}
.explain-cont{
  padding: 0 30rpx;
}
.explain-cont view{
  font-size: 24rpx;
  color: #8d8d8d;
  /* margin-bottom: 10rpx; */
}
.explain-cont .explain-title2{
  font-size: 28rpx;
  color: #121314;
  padding: 20rpx 0;
  margin-bottom: 0;
}
.explain-cont .explain-title2 view{
  width: 6rpx;
  height: 24rpx;
  background: #000;
  margin-right: 20rpx;
}
.explain-close{
  position: absolute;
  top: 104%;
  left: 304rpx;
  width: 55rpx;
  height: 55rpx;
  border: 1px solid #fff;
  border-radius: 50%;
  line-height: 55rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
}
/* 领取成功 */
.coupon-receive{
  position: fixed;
  top: 404rpx;
  left: 220rpx;
  width: 300rpx;
  height: 266rp;
  font-size: 36rpx;
  color: #fff;
  text-align: center;
  background: rgba(0,0,0, 0.8);
  border-radius: 8px;
}
.coupon-receive image{
  display: block;
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  margin: 52rpx auto 32rpx auto;
}
.coupon-receive view{
  margin-bottom: 52rpx;
}
.coupon-mian>.active .cont-border,
.coupon-mian>.active .text-money,
.coupon-mian>.active .money3,
.coupon-mian>.active .cont-btn{
  background: #8d8d8d;
}
.coupon-mian>.active .cont-name,
.coupon-mian>.active .cont-day{
  color: #4a4a4a;
}
.coupon-mian>.active .cont-text{
  border-color: #8d8d8d;
}


.coupon-title .left image,
.coupon-title .left text,
.coupon-title .right image,
.coupon-title .right text,
.cont-text .cont-wrap>view,
.explain-title2 view,
.explain-title2 text{
  display: inline-block;
  vertical-align: middle;
}













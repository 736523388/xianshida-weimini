<!--pages/classify/classify.wxml-->
<view class='classify-main'>
  <!-- 左边导航 -->
  <view class='classify-nav'>
    <block wx:for="{{aleft}}" wx:key="index">
      <view class="{{index == num ? 'active' : ''}}" bindtap='active' data-id="{{item.id}}" data-index="{{index}}">
        <text>{{item.cate_title}}</text>
      </view>
    </block>
  </view>
  <view style='width:20%;'></view>
  <!-- 右边类别 -->
  <view class='classify-right'>
    <view class="cate-container">
      <block wx:for="{{aleft}}" wx:key="index">
        <block wx:if="{{index === num && item.sub.length > 0}}">
          <view class="{{index === num ? 'active' : ''}}" bindtap="changeCate" data-id="{{item.id}}">
            <text>全部</text>
          </view>
          <view wx:for="{{item.sub}}" wx:key="k" wx:for-item="vo" bindtap="changeCate" data-id="{{vo.id}}">
            <text>{{vo.cate_title}}</text>
          </view>
        </block>
      </block>
    </view>
    <view style="display: flex;flex-wrap: wrap;justify-content: space-around;padding: 0 10rpx;box-sizing: border-box;">
      <view class="goods-card" wx:for="{{arightData}}" wx:key="index" data-id="{{item.id}}" bindtap='skip_details'>
        <view class="goods-card-image">
          <image mode="widthFix" src="{{item.goods_logo}}"></image>
        </view>
        <view class="goods-card-title"><text>{{item.goods_title}}</text></view>
        <view class="goods-card-price">
          <view><text>¥</text><text class="goods-card-price-striking">{{item.market_price}}</text></view>
          <view class="goods-card-price-line"><text>{{item.huaxian_price}}</text></view>
        </view>
      </view>
    </view>
  </view>
</view>
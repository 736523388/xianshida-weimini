/* 右边类别 */
.classify-right {
  width: 80%;
  /* background: #f1f1f1; */
}

.classify-cont {
  width: 100%;
  overflow: hidden;
  display: flex;
  justify-content: space-between;
  padding: 20rpx 10rpx;
  background-color: #fff;
  border: #e8e8e8 solid 2rpx;
  margin: 10rpx 0;
  box-sizing: border-box;
}

.classify-cont>image {
  width: 130rpx;
  height: 130rpx;
  margin: 0 15rpx;
}

.classify-cont>view {
  width: 70%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.cc_title {
  font-size: 27rpx;
  color: #121314;
}

.cc_price {
  font-size: 28rpx;
  color: #ea5514;
}

.classify-right .cate-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 10rpx 0;
  font-size: 28rpx;
}

.classify-right .cate-container view {
  background-color: #fff;
  padding: 16rpx;
  margin: 4rpx 10rpx;
  width: 10%;
  border: #e8e8e8 solid 2rpx;
  border-radius: 10%;
}

.classify-right .cate-container .active {
  background-color: #DA251C;
  color: #fff;
}
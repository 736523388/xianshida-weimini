  /* width: 96%; */
  /* height: 68px; */

  background: #f1f1f1;
  /* background: #ededed; */
  /* border-top-right-radius: 22px;
  border-bottom-right-radius: 22px; */
  margin-bottom: 1px;
}

.classify-nav view.active {
  background: #ffc8de;
}


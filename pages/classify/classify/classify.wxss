/* pages/classify/classify.wxss */
@import '../../../templates/goods_card.wxss';
page {
  width: 100vw;
  height: 100vh;
  background-color: #f1f1f1;
}

/* 分类主体 */
.classify-main {
  width: 100%;
  height: 100%;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
}

/* 左边导航 */
.classify-nav {
  width: 20%;
  height: 100%;
  overflow: auto;
  background: #f1f1f1;
  position: fixed;
  top: 0;
  left: 0;
}

.classify-nav view {
  background: #fff;
  margin-bottom: 1px;
  color: #000;
}

.classify-nav .active {
  background-color: #f1f1f1;
  color: #fb670f;
}
.classify-nav text {
  display: block;
  padding: 30rpx 0;
  font-size: 14px;
  text-align: center;
}

/* 右边类别 */
.classify-right {
  width: 80%;
  /* background: #f1f1f1; */
}

.classify-cont {
  width: auto;
  overflow: hidden;
  display: flex;
  justify-content: space-between;
  padding: 20rpx 10rpx;
  background-color: #fff;
  box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.2);
  box-sizing: border-box;
  margin: 16rpx;
}

.classify-cont>image {
  width: 130rpx;
  height: 130rpx;
  margin: 0 15rpx;
}

.classify-cont>view {
  width: 70%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.cc_title {
  font-size: 27rpx;
  color: #121314;
}

.cc_price {
  font-size: 28rpx;
  color: #ea5514;
}

.classify-right .cate-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 10rpx 0;
  font-size: 28rpx;
}

.classify-right .cate-container view {
  background-color: #fff;
  padding: 16rpx;
  margin: 4rpx 10rpx;
  width: 10%;
  /* border: #e8e8e8 solid 2rpx; */
  box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.2);
  /* border-radius: 10%; */
}

.classify-right .cate-container .active {
  background-color: #fb670f;
  color: #fff;
}


/* pages/classify/classify.wxss */
page {
  width: 100vw;
  height: 100vh;
}

.classify-box {
  height: 100%;
  background-color: #f1f1f1;
}

.classify-title {
  position: fixed;
  top: 0;
  width: 100%;
  font-size: 14px;
  color: #000;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  margin-bottom: 10rpx;
  z-index: 100;
  background: #fff;
}

.classify-title text {
  color: #f32e6e;
  position: relative;
  margin-right: 222rpx;
}

.classify-title text::before {
  position: absolute;
  content: "";
  top: 100%;
  left: 0;
  width: 100%;
  height: 2px;
  background: #f32e6e;
}

.classify-title text,
.classify-title navigator {
  padding: 22rpx;
}

/* 分类主体 */
.classify-main {
  width: 100%;
  height: 100%;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  /* margin-top: 88rpx; */

}

/* 左边导航 */
.classify-nav {
  width: 20%;
  height: 100%;
  overflow: auto;
  background: #f1f1f1;
  position: fixed;
  top: 0;
  left: 0;
}

.classify-nav view {
  /* width: 100%;

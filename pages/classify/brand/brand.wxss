/* pages/classify/brand/brand.wxss */
page{
  width: 100vw;
  height: 100vh;
  background: #f5f5f5;
}
.classify-title{
  font-size: 14px;
  color: #000;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  background: #fff;
}
.classify-title view{
  color: #f32e6e;
  position: relative;
  margin-left: 222rpx;
}
.classify-title view::before{
  position: absolute;
  content: "";
  top: 100%;
  left: 0;
  width: 100%;
  height: 2px;
  background: #f32e6e;
}
.classify-title text,
.classify-title view{
  padding: 22rpx;
}
/* 主体 */
.brand-main{
  padding: 32rpx 0 24rpx 0;
}
/* title */
.main-title{
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 14px;
  color: #fff;
  background: #000;
  margin-bottom: 20rpx;
}
.main-title image{
  width: 10rpx;
  height: 19rpx;
  margin-left: 6px;
}
/* logo图 */
.main-imgs{
  border-top: 1px solid #eee;
}
.main-imgs{
  height: 78vh;
  overflow-y: auto;
}
.main-imgs navigator{
  width: 25%;
  height: 110rpx;
  overflow: hidden;
  border-right: 1px solid #eee;
  border-bottom: 1px solid #eee;
  box-sizing: border-box;
  text-align: center;
}
.main-imgs navigator image{
  width: 100rpx;
  height: auto;

}








.main-title text,
.main-title image{
  display: inline-block;
  vertical-align: middle;
}











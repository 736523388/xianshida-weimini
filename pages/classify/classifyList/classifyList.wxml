<!--pages/classify/classifyList/classifyList.wxml-->
<import src="../../../templates/goods_card.wxml" />
<scroll-view class='classifyList-box' scroll-y bindscrolltolower="load">
  <!-- 搜索框 -->
  <mp-searchbar></mp-searchbar>
  <view class='classifyList-search'>
    <form bindsubmit='search'>
      <view class='wrap clearboth'>
        <view class='ban-search'>
          <image src='/images/search-icon.png'></image>
          <input bindconfirm='resignFocus' confirm-type='search' placeholder='耗儿鱼、雪花牛肉' name="Keyword" value='{{Keyword}}'></input>
        </view>
        <button form-type='submit'>搜索</button>
      </view>
    </form>
  </view>
  <!-- 主体 -->
  <view>
    <!-- 筛选 -->
    <view class='main-screen'>
      <view data-index="hot" bindtap='goodssort' style="color:{{sort === 'hot' ?'#F43C77': '#333'}}">人气</view>
      <view data-index="price" bindtap='goodssort'>
        <text style="color:{{sort === 'pricelow' || sort === 'pricehight' ?'#F43C77': '#333'}}">价格</text>
        <view>
          <image src="{{sort === 'pricehight' ? '/images/upper.png': '/images/upper2.png'}}"></image>
          <image src="{{sort === 'pricelow' ? '/images/lower.png': '/images/lower2.png'}}"></image>
        </view>
      </view>
    </view>
    <!-- 产品 -->
    <view style="display: flex;flex-wrap: wrap;justify-content: space-around;padding: 10rpx;box-sizing: border-box;">
      <view wx:for="{{goodsList.data}}" wx:key="index" data-id="{{item.id}}" bindtap='goodsLink'>
        <template is="goods_card" data="{{item}}" />
      </view>
    </view>
  </view>
</scroll-view>
.rTitle{
  width:94%;
  padding: 0 3%;
  font-size: 32rpx;
  color: #000;
  
}
.rText{
  display: block;
  width:94%;
  padding: 0 3%;
  font-size: 26rpx;
  color: #8d8d8d;
}
.rPrice-box{
  padding: 0 10rpx 8rpx;
  margin-top: 10rpx; 
  position: relative;
}
.rPrice-box .afleft text{
  display: inline-block;
  vertical-align: middle;
}
.rPrice-box .afleft text:nth-of-type(1){
  font-size: 30rpx;
  font-weight: 500;
  color: #f32e6e;
  margin-right: 16rpx;
}
.rPrice-box .afleft text:nth-of-type(3){
  font-size: 20rpx;
  color: #959595;
}
.rPrice-box .afleft text:nth-of-type(2){
  /* position: absolute;
  left: 28%;
  top: 0%; */
  width: 66rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  font-size: 20rpx;
  color: #fff;
  border-radius: 6px;
  background: #fdb7d6;
  margin-bottom: 14rpx;
  margin-right: 4rpx;
}
.rPrice-box .afright image{
  width: 45rpx;
  height: 45rpx;
  border-radius: 50%;
  border: 1px solid #e8e8e8;
}
.rImgs-box:nth-child(2n){
  margin-right: 0
}
.productImgBox{
  width:100%;
  /* height: 302rpx; */
  height: auto;
}
.productImgBox image{
  width: 100%;
  height: auto;
}








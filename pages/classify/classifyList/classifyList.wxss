/* pages/classify/classifyList/classifyList.wxss */
@import '../../../templates/goods_card.wxss';
.classifyList-box{
  height: 100vh;
  overflow: hidden;
}
/* 搜索框 */

.classifyList-search .wrap{
  padding: 16rpx 0;
}
.ban-search{
  float: left;
  vertical-align: middle;
  width: 582rpx;
  height: 56rpx;
  line-height: 56rpx;
  background: rgba(255,255,255, 0.6);
  border: 1px solid #eee;
  border-radius: 22px;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  box-shadow: 1px 1px 4px rgb(221, 219, 219);
}
.ban-search image{
  width: 23rpx;
  height: 23rpx;
  margin: 0 22rpx;
  order: 1;
  align-self: center;
}
.ban-search input{
  order: 2;
  flex-grow: 2;
  font-size: 26rpx;
}
.classifyList-search button{
  float: right;
  width: 110rpx;
  height: 54rpx;
  line-height: 52rpx;
  text-align: center;
  font-size: 14px;
  color: #fff;
  border-radius: 6px;
  background: #fb670f;
  margin-top: 3px;
}
.search-text1{
  font-family:'LinotypeSyntax';
  font-weight:bold;
  font-style:normal;
  color:#8044EC;
  font-size: 24rpx;
  margin: 0 22rpx;
}
.search-text2{
  font-size: 22rpx;
  margin-top: -4rpx;
  color: #A09DA5;
}
/* 主体 */
/* 筛选 */
.main-screen{
  padding: 28rpx 0;
  text-align: center;
  font-size: 14px;
  color: #333;
  border-top: 1px solid #ebebeb; 
  border-bottom: 1px solid #ebebeb; 
}
.main-screen>view.active{
  color: #F43C77;
}
.main-screen>view:last-child{
  margin-left: 232rpx;
}
.main-screen view,
.main-screen>view:last-child text,
.main-screen>view:last-child view{
  display: inline-block;
  vertical-align: middle;
}
.main-screen>view:last-child view image{
  display: block;
  width: 16rpx;
  height: 12rpx;
  margin-left: 4px;
}
.main-screen>view:last-child view image:first-child{
  margin-bottom: 2px;
}
/* 产品 */
.main-cont{
  padding-top: 16rpx;
}
.rImgs-box{
  float: left;
  width: 342rpx;
  /* height: 492rpx; */
  height: auto;
  border: 1px solid #d5d5d5;
  border-radius: 8px;
  margin: 0 16rpx 16rpx 0;
  box-shadow: 0 0 4px #e8e8e8;
  position: relative;
  background: #fff;
  overflow: hidden;
}
.rImgs-box .rImgs-icon{
  position: absolute;
  top: 0;
  right: 14rpx;
  width: 50rpx;
  height: 51rpx;
  text-align: center;
  line-height: 48rpx;
  font-size: 22rpx;
  color: #fff;
}
.rImgs-box .rImgs-icon image{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  border-top-left-radius: 0;
  border-top-right-radius: 0;
}
.rImgs-box .rImgs-icon text{
  position: relative;
  z-index: 2;
}

/* pages/classify/classifyList/classifyList.wxss */
/* 品牌介绍 */
page{
  background: #fff;
}
.classifyList-box{
  height: 100vh;
  overflow: hidden;
}
.bCont-introduce{
  width: 100%;
  height: auto;
  margin-bottom: 20rpx;
  position: relative;
  overflow: hidden;
}
.bCont-introduce>image{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
}
.bCont-introduce>.wrap{
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  position: relative;
  z-index: 10;
 
}
.bCont-logo>view{
  display: inline-block;
  vertical-align: bottom;
}
.logo-img{
  width: 110rpx;
  height: 96rpx;
  /* border: 2rpx solid #f1f1f1; */
  margin-right: 20rpx;
  /* background: #fff; */
}
.logo-img image{
  width: 100%;
  height: 100%;
}
.logo-introduce view{
  font-size: 24rpx;
  color: #121314;
}
.logo-introduce text{
  display: block;
  font-size: 20rpx;
  color: #8d8d8d;
}
.bCont-text{
  font-size: 20rpx;
  color: #4d4d4d;
  margin-top: 22rpx;
}
/* 主体 */
/* 筛选 */
.main-screen{
  padding: 28rpx 0;
  text-align: center;
  font-size: 14px;
  color: #333;
  border-top: 1px solid #ebebeb; 
  border-bottom: 1px solid #ebebeb; 
  background: #fff;
}
.main-screen>view.active{
  color: #F43C77;
}
.main-screen>view:last-child{
  margin-left: 232rpx;
}
.main-screen view,
.main-screen>view:last-child text,
.main-screen>view:last-child view{
  display: inline-block;
  vertical-align: middle;
}
.main-screen>view:last-child view image{
  display: block;
  width: 16rpx;
  height: 12rpx;
  margin-left: 4px;
}
.main-screen>view:last-child view image:first-child{
  margin-bottom: 2px;
}
/* 产品 */
.main-cont{
  padding-top: 16rpx;
}
.rImgs-box{
  float: left;
  width: 342rpx;
  /* height: 492rpx; */
  height: auto;
  border: 1px solid #d5d5d5;
  border-radius: 8px;
  margin: 0 16rpx 16rpx 0;
  box-shadow: 0 0 4px #e8e8e8;
  position: relative;
  background: #fff;
}
.rImgs-box .rImgs-icon{
  position: absolute;
  top: 0;
  right: 14rpx;
  width: 50rpx;
  height: 51rpx;
  text-align: center;
  line-height: 48rpx;
  font-size: 22rpx;
  color: #fff;
}
.rImgs-box .rImgs-icon image{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  border-top-left-radius: 0;
  border-top-right-radius: 0;
}
.rImgs-box .rImgs-icon text{
  position: relative;
  z-index: 2;
}
.rImgs-box image{
  width: 100%;
  height: 302rpx;
  border-top-left-radius: 8px;
  border-top-right-radius: 8px;
}
.rTitle{
  width:94%;
  padding: 0 3%;
  font-size: 32rpx;
  color: #000;
}
.rText{
  display: block;
  width:94%;
  padding: 0 3%;
  font-size: 26rpx;
  color: #8d8d8d;
}
.rPrice-box{
  padding: 0 18rpx;
  margin-top: 10rpx; 
  position: relative;
}
.rPrice-box .afleft text{
  display: inline-block;
  vertical-align: middle;
}
.rPrice-box .afleft text:nth-of-type(1){
  font-size: 30rpx;
  font-weight: 500;
  color: #f32e6e;
   margin-right: 16rpx;
}
.rPrice-box .afleft text:nth-of-type(3){
  font-size: 20rpx;
  color: #959595;
}
.rPrice-box .afleft text:nth-of-type(2){
  width: 66rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  font-size: 20rpx;
  color: #fff;
  border-radius: 6px;
  background: #fdb7d6;
  margin-bottom: 14rpx;
  margin-right: 4rpx;
}
.rPrice-box .afright image{
  width: 45rpx;
  height: 45rpx;
  border-radius: 50%;
  border: 1px solid #e8e8e8;
}
.rImgs-box:nth-child(2n){
  margin-right: 0
}
.recommendImgBox{
  width:100%;
  height: 302rpx;
}
.recommendImgBox image{
  max-width:100%;
  max-height: 100%;
}






